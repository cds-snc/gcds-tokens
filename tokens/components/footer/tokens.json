{
  "footer": {
    "band": {
      "padding": {
        "desktop": {
          "value": "{spacing.450.value} 0",
          "type": "spacing"
        },
        "mobile": {
          "value": "{spacing.300.value} 0",
          "type": "spacing"
        }
      }
    },
    "container": {
      "margin": {
        "value": "0 auto",
        "type": "spacing"
      },
      "width": {
        "value": "{container.xl.value}",
        "type": "sizing"
      }
    },
    "contextual": {
      "background": {
        "value": "#33465c",
        "type": "color",
        "comment": "Footer background colour - Canada.ca style"
      },
      "text": {
        "value": "{text.light.value}",
        "type": "color"
      }
    },
    "font": {
      "_": {
        "value": {
          "fontFamily": "{fontFamilies.body}",
          "fontWeight": "{fontWeights.regular}",
          "lineHeight": "{lineHeights.textSmallMobile}",
          "fontSize": "{fontSizes.textSmallMobile}"
        },
        "type": "typography",
        "comment": "Mandatory elements alignment: sub-components of footer use 16px font."
      },
      "heading": {
        "value": {
          "fontFamily": "{fontFamilies.heading}",
          "fontWeight": "{fontWeights.bold}",
          "lineHeight": "{lineHeights.h3Mobile}",
          "fontSize": "{fontSizes.h3Mobile}"
        },
        "type": "typography",
        "comment": "Mandatory elements alignment: size 26px"
      }
    },
    "gridGap": {
      "value": "{spacing.300.value}",
      "type": "spacing"
    },
    "heading": {
      "margin": {
        "value": "0 0 {spacing.300.value}",
        "type": "spacing"
      }
    },
    "list": {
      "padding": {
        "value": "0",
        "type": "spacing"
      }
    },
    "main": {
      "background": {
        "value": "{bg.primary.value}",
        "type": "color"
      },
      "nav": {
        "first": {
          "after": {
            "border": {
              "color": {
                "value": "{color.grayscale.0.value}",
                "type": "border"
              },
              "width": {
                "value": "{border.width.lg.value}",
                "type": "borderWidth"
              }
            },
            "width": {
              "value": "{spacing.450.value}",
              "type": "sizing"
            }
          }
        }
      },
      "text": {
        "value": "{text.light.value}",
        "type": "color"
      }
    },
    "sub": {
      "background": {
        "value": "{bg.light.value}",
        "type": "color"
      },
      "listitem": {
        "before": {
          "margin": {
            "value": "0 {spacing.150.value}",
            "type": "spacing"
          }
        }
      },
      "signature": {
        "width": {
          "value": "10.25rem",
          "type": "sizing"
        },
        "minWidth": {
          "value": "auto",
          "type": "sizing"
        },
        "maxHeight": {
          "value": "2.4375rem",
          "type": "sizing"
        },
        "margin": {
          "value": "0 0 0 auto",
          "type": "spacing"
        },
        "sm": {
          "width": {
            "value": "6.25rem",
            "type": "sizing"
          },
          "maxHeight": {
            "value": "1.5rem",
            "type": "sizing"
          }
        }
      }
    }
  }
}
