{
  "input": {
    "border": {
      "radius": {
        "value": "{border.radius.sm.value}",
        "type": "borderRadius"
      },
      "width": {
        "value": "{border.width.md.value}",
        "type": "borderWidth"
      }
    },
    "danger": {
      "border": {
        "value": "{danger.default.value}",
        "type": "color"
      }
    },
    "default": {
      "background": {
        "value": "{bg.white.value}",
        "type": "color"
      },
      "text": {
        "value": "{text.primary.value}",
        "type": "color"
      }
    },
    "disabled": {
      "background": {
        "value": "{disabled.background.value}",
        "type": "color"
      },
      "text": {
        "value": "{disabled.text.value}",
        "type": "color"
      }
    },
    "focus": {
      "border": {
        "value": "{focus.border.value}",
        "type": "color"
      },
      "box-shadow": {
        "value": "0 0 0 {border.width.md.value} {color.grayscale.0.value}",
        "type": "color"
      }
    },
    "font": {
      "value": {
        "fontFamily": "{fontFamilies.body}",
        "fontWeight": "{fontWeights.regular}",
        "lineHeight": "{lineHeights.text}",
        "fontSize": "{fontSizes.text}"
      },
      "type": "typography"
    },
    "margin": {
      "value": "0 0 {spacing.300.value}",
      "type": "spacing"
    },
    "minWidthAndHeight": {
      "value": "{spacing.600.value}",
      "type": "sizing"
    },
    "outline": {
      "width": {
        "value": "{outline.width.value}",
        "type": "other"
      }
    },
    "padding": {
      "value": "{spacing.100.value}",
      "type": "spacing"
    }
  }
}
