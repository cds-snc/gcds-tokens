{
  "pagination": {
    "active": {
      "text": {
        "value": "{link.light.value}",
        "type": "color"
      },
      "background": {
        "value": "{bg.primary.value}",
        "type": "color"
      }
    },
    "border": {
      "radius": {
        "value": "{border.radius.sm.value}",
        "type": "borderRadius"
      },
      "width": {
        "value": "{border.width.md.value}",
        "type": "borderWidth"
      }
    },
    "default": {
      "text": {
        "value": "{link.default.value}",
        "type": "color"
      }
    },
    "hover": {
      "background": {
        "value": "{color.blue.100.value}",
        "type": "color"
      },
      "text": {
        "value": "{link.hover.value}",
        "type": "color"
      }
    },
    "focus": {
      "background": {
        "value": "{focus.background.value}",
        "type": "color"
      },
      "box-shadow": {
        "value": "0 0 0 {border.width.md.value} {color.grayscale.0.value}",
        "type": "color"
      },
      "text": {
        "value": "{focus.text.value}",
        "type": "color"
      },
      "outline": {
        "width": {
          "value": "{outline.width.value}",
          "type": "other"
        }
      }
    },
    "font": {
      "-": {
        "value": {
          "fontFamily": "{fontFamilies.body}",
          "fontWeight": "{fontWeights.medium}",
          "lineHeight": "{lineHeights.text}",
          "fontSize": "{fontSizes.text}"
        },
        "type": "typography",
        "comment": "To be removed in another PR"
      },
      "desktop": {
        "value": {
          "fontFamily": "{fontFamilies.body}",
          "fontWeight": "{fontWeights.medium}",
          "lineHeight": "{lineHeights.text}",
          "fontSize": "{fontSizes.text}"
        },
        "type": "typography"
      },
      "mobile": {
        "value": {
          "fontFamily": "{fontFamilies.body}",
          "fontWeight": "{fontWeights.medium}",
          "lineHeight": "{lineHeights.textMobile}",
          "fontSize": "{fontSizes.textMobile}"
        },
        "type": "typography"
      }
    },
    "list": {
      "endButton": {
        "padding": {
          "value": "{spacing.100.value}",
          "type": "spacing"
        }
      }
    },
    "listitem": {
      "margin": {
        "value": "{spacing.75.value}",
        "type": "spacing"
      }
    },
    "mobile": {
      "list": {
        "border": {
          "value": "{link.default.value}",
          "type": "border"
        },
        "item": {
          "margin": {
            "value": "{spacing.25.value}",
            "type": "spacing"
          }
        },
        "prevnext": {
          "margin": {
            "value": "{spacing.150.value} auto 0",
            "type": "spacing"
          }
        }
      }
    },
    "simple": {
      "label": {
        "fontWeight": {
          "value": "{fontWeights.regular.value}",
          "type": "fontWeights"
        }
      },
      "listitem": {
        "margin": {
          "value": "{spacing.75.value} {spacing.75.value} {spacing.150.value}",
          "type": "spacing"
        },
        "text": {
          "margin": {
            "value": "0 0 {spacing.25.value}",
            "type": "spacing"
          }
        }
      },
      "padding": {
        "value": "{spacing.150.value} {spacing.100.value}",
        "type": "spacing"
      }
    }
  }
}
